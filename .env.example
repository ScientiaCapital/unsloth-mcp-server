# Unsloth MCP Server Environment Variables

# Hugging Face Token (optional, for accessing gated models and private datasets)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_token_here

# Server Configuration
UNSLOTH_SERVER_NAME=unsloth-server
UNSLOTH_SERVER_VERSION=2.1.0
UNSLOTH_ENVIRONMENT=production

# Logging Configuration
UNSLOTH_LOG_LEVEL=info  # Options: error, warn, info, debug
UNSLOTH_LOG_FILE=./logs
UNSLOTH_LOG_MAX_SIZE=5242880  # 5MB
UNSLOTH_LOG_MAX_FILES=5

# Python Configuration
UNSLOTH_PYTHON_PATH=python  # Path to Python executable
UNSLOTH_PYTHON_TIMEOUT=600000  # 10 minutes in milliseconds
UNSLOTH_PYTHON_MAX_RETRIES=3

# Resource Limits
UNSLOTH_MAX_EXECUTION_TIME=600000  # 10 minutes
UNSLOTH_MAX_FILE_SIZE=104857600  # 100MB
UNSLOTH_MAX_SCRIPT_LENGTH=50000
UNSLOTH_MAX_CONCURRENT_OPERATIONS=3

# Cache Configuration
UNSLOTH_CACHE_ENABLED=true
UNSLOTH_CACHE_TTL=3600  # 1 hour in seconds
UNSLOTH_CACHE_MAX_SIZE=1000
UNSLOTH_CACHE_DIRECTORY=./.cache

# Security Configuration
UNSLOTH_VALIDATE_INPUT=true
UNSLOTH_SANITIZE_SCRIPTS=true

# Allowed Paths (comma-separated)
UNSLOTH_ALLOWED_PATHS=/home,/workspace,./

# Blocked Paths (comma-separated)
UNSLOTH_BLOCKED_PATHS=/etc,/root,/sys
