{
  "name": "unsloth-server",
  "version": "2.2.0",
  "description": "MCP server for Unsloth - a library for optimizing and fine-tuning LLMs",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "unsloth-mcp": "./build/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js && chmod +x build/cli.js",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "cli": "ts-node src/cli.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "tsc --noEmit && eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "bench": "ts-node benchmarks/suite.ts",
    "bench:compare": "ts-node benchmarks/compare.ts",
    "prepare": "husky"
  },
  "keywords": [
    "unsloth",
    "llm",
    "fine-tuning",
    "mcp",
    "ai"
  ],
  "author": "",
  "license": "Apache-2.0",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.6.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
